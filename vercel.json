{
  "buildCommand": false,
  "outputDirectory": ".",
  "framework": null,
  "installCommand": false,
  "functions": {
    "api/**/*": {
      "includeFiles": "**"
    }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    },
    {
      "source": "/:path*.webp",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        },
        {
          "key": "Content-Type",
          "value": "image/webp"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/(.*)%20(.*)",
      "destination": "/$1 $2"
    }
  ]
}
